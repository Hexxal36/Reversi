<div class="grid">
    @for (int i = 0; i < 8; i++)
    {
        <div class="row">
            @for (int j = 0; j < 8; j++)
            {

                <div class="cell">
                     <div class=" @((i == 3 && j == 3) || (i == 4 && j == 4) ? "cell-white" : "") @((i == 4 && j == 3) || (i == 3 && j == 4) ? "cell-black" : "")">

                     </div>
                </div>
            }
        </div>
    }
</div>